<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#F5F5F5">
	<RelativeLayout android:id="@+id/addbar"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<EditText android:id="@+id/addtodofield"
			android:layout_width="270dp"
			android:layout_height="wrap_content"
			android:hint="New todo" />
		<Button android:id="@+id/addtodobtn" 
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/addtodofield"
			android:text="Add" />	
	</RelativeLayout>
	<ListView android:id="@android:id/list" 
		android:layout_below="@id/addbar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#f5f5f5"></ListView>
	
</RelativeLayout>
